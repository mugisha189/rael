{
   "extends": ["next/core-web-vitals", "eslint:recommended", "next", "plugin:prettier/recommended"],
   "rules": {
      "prettier/prettier": [
         "warn",
         {
            "endOfLine": "auto",
            "singleQuote": true,
            "trailingComma": "all",
            "tabWidth": 3,
            "semi": true,
            "printWidth": 130,
            "bracketSpacing": true
         }
      ],
      "no-unused-vars":"warn",
      "no-useless-escape":"warn"
   },
   "overrides": [
      {
         "files": ["src/**/*.ts", "src/**/*.tsx"],
         "excludedFiles": ["*.js", "*.jsx", "*.json", "*.config.js"]
      }
   ],
   "ignorePatterns": ["./src/cms/**/*"]
}
